{
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "functions"
  },
  "hosting": {
    "predeploy": [
      "npm run build:prod"
    ],
    "public": "dist/contributors-img",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/image",
        "function": "createContributorsImage"
      },
      {
        "source": "/api/contributors",
        "function": "getContributors"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
