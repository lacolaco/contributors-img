{
  "hosting": [
    {
      "target": "production",
      "public": "dist/apps/webapp",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "headers": [
        {
          "regex": ".+\\.[0-9a-f]{8,}\\.(css|js)$",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public,max-age=31536000,immutable"
            }
          ]
        }
      ],
      "rewrites": [
        {
          "source": "/api/**",
          "run": {
            "serviceId": "api-production",
            "region": "us-central1"
          }
        },
        {
          "source": "/image",
          "run": {
            "serviceId": "api-production",
            "region": "us-central1"
          }
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "staging",
      "public": "dist/apps/webapp",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "headers": [
        {
          "regex": ".+\\.[0-9a-f]{8,}+\\.(css|js)$",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public,max-age=31536000,immutable"
            }
          ]
        }
      ],
      "rewrites": [
        {
          "source": "/api/**",
          "run": {
            "serviceId": "api-staging",
            "region": "us-central1"
          }
        },
        {
          "source": "/image",
          "run": {
            "serviceId": "api-staging",
            "region": "us-central1"
          }
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ],
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
