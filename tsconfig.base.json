{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "noEmitOnError": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "skipLibCheck": true,
    "paths": {
      "@lib/renderer": ["libs/renderer/src/index.ts"],
      "@lib/core": ["./libs/core/src/index.ts"],
      "@lib/core/testing": ["./libs/core/src/testing/index.ts"],
      "@lib/renderer-ui": ["libs/renderer-ui/src/index.ts"]
    },
    "rootDir": "."
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictTemplates": true
  }
}
