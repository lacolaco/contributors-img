{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2015",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"]
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["*.spec.ts"]
}
